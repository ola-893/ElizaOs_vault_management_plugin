{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
     "skipLibCheck": true,
    "noImplicitAny": false,
    "emitDeclarationOnly": true,
   "typeRoots": ["./node_modules/@types", "./types"],
    "types": ["node"]
  },
   
  "include": ["src/index.ts", "src/plugin.ts", "src/frontend/**/*.ts", "src/frontend/**/*.tsx"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/__tests__/**/*",
    "src/**/cypress/**/*",
     "src/**/*",
    "types/**/*"
  ]
}
